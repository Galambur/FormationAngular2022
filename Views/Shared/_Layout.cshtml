<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch treat : @ViewBag.Title</title>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h1>Welcome to Dutch treat</h1>
        <menu>
            <ul>
                <li><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact us</a></li>
                <li><a asp-controller="App" asp-action="About">About us</a></li>
            </ul>
        </menu>
    </header>

    <section>
        <h2>@ViewBag.Title</h2>
        @RenderBody()
    </section>

    <footer>Copyright 2022 Gaelle</footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/index.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>